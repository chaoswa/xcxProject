page {
  width: 100%;
  background-color: #410070;
}

.container {
  width: 100%;
  height: 100%;
  overflow: hidden;
  color: #fff;
  position: relative;
  padding-bottom: 70rpx;
}

button::after {
  border: none;
}

.title {
  position: absolute;
  top: 70rpx;
}

.title image {
  width: 683rpx;
  height: 69rpx;
}

.prize {
  position: absolute;
  top: 0;
  left: 30rpx;
}

.prize image {
  width: 623rpx;
  height: 509rpx;
}

.bg {
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: absolute;
  top: 0;
  z-index: -100;
}

.bg image {
  width: 750rpx;
  height: 3094rpx;
}

.show-bor {
  margin-top: 550rpx;
  width: 690rpx;
  height: auto;
  border: 5rpx solid #310651;
  border-radius: 20rpx;
  background-color: #6100a5;
  position: relative;
}

.show-title {
  width: 317rpx;
  height: 65rpx;
  background-color: #9118e6;
  border-radius: 60rpx;
  position: absolute;
  top: -32rpx;
  left: 186rpx;
  text-align: center;
  font-size: 30rpx;
  line-height: 65rpx;
}

.go-bor {
  width: 618rpx;
  height: 182rpx;
  background-color: #8500e4;
  border-radius: 20rpx;
  margin: 70rpx 36rpx;
  box-shadow: 0 5px 5px #b360ee inset;
  position: relative;
}

.cont {
  font-size: 33rpx;
  padding: 20rpx 50rpx 0 50rpx;
}

.btn {
  width: 192rpx;
  height: 60rpx;
  background-color: #e5419c;
  border-radius: 60rpx;
  font-size: 30rpx;
  text-align: center;
  line-height: 60rpx;
  margin-left: 400rpx;
  box-shadow: 0 5px 5px #f57aa8 inset;
  color: #fff;
}

.num {
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  background-color: #9718f2;
  box-shadow: 0 3px 3px #b459f6 inset;
  border-radius: 50%;
  text-align: center;
  line-height: 50rpx;
  font-size: 28rpx;
  top: 66rpx;
  left: -25rpx;
}

.top {
  margin-top: 100rpx;
}

.show-body {
  width: 93%;
  height: 95%;
  margin: 50rpx auto;
  display: flex;
  align-items: center;
  flex-flow: row wrap;
  justify-content: space-between;
  overflow: hidden;
}

.show-img {
  width: 306rpx;
  height: 210rpx;
  margin: 20rpx 0;
  border-radius: 20rpx;
  position: relative;
  overflow: hidden;
}

.show-img image {
  width: 306rpx;
  height: 210rpx;
}

.text {
  width: 322rpx;
  height: 50rpx;
  position: absolute;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  font-size: 28rpx;
  line-height: 50rpx;
  padding-left: 10rpx;
}

.text text {
  margin-left: 30rpx;
  text-decoration: line-through;
}

.rule {
  width: 643rpx;
  height: auto;
  background-color: #8500e4;
  border-radius: 20rpx;
  margin: 70rpx auto;
  display: flex;
  flex-flow: row wrap;
  overflow: hidden; 
  text-align: center;
}

.rule-list {
  width: 100%;
  height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  line-height: 80rpx;
}

.rule-list:nth-of-type(1) {
  background-color: #9c1df7;
}

.rule-list text {
  display: inline-block;
  width: 50%;
}

.rule-list text:nth-child(1) {
  text-align: center;
}

.rule-list text:nth-child(2) {
  text-align: center;
}

.bottom {
  position: absolute;
  bottom: 0;
  z-index: -100;
}

.bottom image {
  width: 750rpx;
  height: 104rpx;
}
