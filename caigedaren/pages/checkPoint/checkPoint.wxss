/* pages/checkPoint/checkPoint.wxss */
page{
  width: 100%;
  background-color: #410070;
}
.container{
  padding-bottom: 120rpx;
  text-align: center;  
}

.c_info{
  position: relative;
  display: flex;
  flex-flow: column;
  align-items: center;
  width: 690rpx;
  height: 763rpx;
  margin-top: 230rpx;
  background-color: #8c50b4;
  border-radius: 20rpx;
}
.c_img{
  position: absolute;
  top:-180rpx;
  left: 160rpx;
  width: 344rpx;
  height: 228rpx;
}
.c_user{
  width: 127rpx;
  height: 123rpx;
  margin-top: 80rpx;
  background-color: #bfbfbf;
  border-radius: 65rpx;
  overflow: hidden;
}
.c_user image{
  width: 100%;
  height: 100%;
  border-radius: 65rpx;
}
.c_name{
  width: 240rpx;
  height: 50rpx;
  margin-top: 20rpx;
  font-size: 32rpx;
  line-height: 50rpx;
  text-align: center;
  overflow: hidden;
}
.c_point{
  width: 240rpx;
  height: 55rpx;
  margin-top: 20rpx;
  font-size: 36rpx;
  line-height: 55rpx;
  text-align: center;
  overflow: hidden;
}
.c_point text{
  color:#ffd75d;
}
.c_start{
  width: 438rpx;
  height: 106rpx;
  margin-top: 40rpx;
  font-size: 32rpx;
  line-height: 106rpx;
  border-radius: 55rpx;
  background-color: #f0b450;
}
.c_btn{
  display: flex;
  flex-flow: row;
  align-items: center;
  justify-content: center;
  width: 300rpx;
  height: 80rpx;
  margin-top: 35rpx;
  font-size: 32rpx;
  color: #e040a7;
  background-color: #fff;
  border-radius: 45rpx;
}
.c_btn .c_like{
  width: 44rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.c_btn .c_map{
  width: 33rpx;
  height: 44rpx;
  margin-right: 20rpx;
}
