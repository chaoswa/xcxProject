page {
  width: 100%;
  /* min-height: 100%; */
  background-color: #410070;
}

.container {
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.openBtn{
  position: fixed;
  right: 0;
  top: 10%;
  width: 90rpx;
  height: 90rpx;
  padding: 0;
  background-color: transparent;
  z-index: 999;
}
.openBtn image{
  margin: auto;
  width: 90rpx;
  height: 90rpx;
}
.tousu{
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: center;
  top:19%;
  right: 0;
  color: #fff;
  width: 154rpx;
  height: 64rpx;
  background: linear-gradient(#6027a3, #51018c);
  text-align: center;
  line-height: 64rpx;
  border-top-left-radius: 40rpx;
  border-bottom-left-radius: 40rpx;
  font-size: 28rpx;
  z-index: 999;
}
.tousu image{
  width: 30rpx;
  height: 34rpx;
  margin: 0 10rpx;
}

.user-msg {
  width: 100%;
  height: 1079rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-bg {
  width: 748rpx;
  height: 1079rpx;
  position: absolute;
  top: 0;
  z-index: -1;
}

.love {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  font-size: 30rpx;
}

.love image {
  width: 40rpx;
  height: 37rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}

.avaurl {
  width: 108rpx;
  height: 108rpx;
  border-radius: 50%;
  border: 1rpx solid #fff;
  margin: 80rpx 0 20rpx 0;
  overflow: hidden;
}

.avaurl image {
  width: 108rpx;
  height: 108rpx;
}

.name {
  font-size: 34rpx;
}

.user-total {
  margin-top: 50rpx;
}

.user-cont {
  display: inline-block;
  width: 300rpx;
  text-align: center;
}

.user-title {
  font-size: 34rpx;
}

.user-num {
  font-size: 50rpx;
  color: #e040a7;
}

.border {
  width: 690rpx;
  height: 210rpx;
  background: linear-gradient(to right, #9000d4, #6e00bd);
  margin: 30rpx;
}
.mar-top{
  margin-top: 130rpx;
}
.border-title{
  font-size: 34rpx;
  margin: 20rpx 0 0 20rpx;
}
.det{
  text-align: center;
  display: inline-block;
  color: #d299ed;
  font-size: 30rpx;
  margin: 30rpx 75rpx;
}
.border-num{
  font-size: 32rpx;
  color: #fff;
}
.record{
  display: flex;
  flex-flow: column;
  align-items: center;
  width: 750rpx;
  min-height: 350rpx;
  margin-top: 30rpx;
  background-color: #fff;
  border-top-left-radius: 50rpx;
  border-top-right-radius: 50rpx;
}
.record-top{
  width: 100%;
  padding-top: 25rpx;
  padding-bottom: 25rpx;
  height: 41rpx;
  text-align: center;
}
.record-top image{
  width: 537rpx;
  height: 33rpx;
}
.record-cont image{
  width: 361rpx;
  height: 211rpx;
}

.content{
  display: flex;
  align-items: center;
  justify-content: space-around;
  width: 710rpx;
  margin: 10rpx 0;
  height: 102rpx;
  background-color: #fff;
}
.more-img{
  width: 190rpx;
  height: 80rpx;
  border-radius: 20rpx;
}
.more-img image{
  width: 190rpx;
  height: 80rpx;
  border-radius: 20rpx;
}
.play-content{
  display: flex;
  flex-flow: column;
  justify-content: center;
  width: 280rpx;
  height: 100%;
}
.content-title{
  width: 100%;
  height: 40rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 40rpx;
  text-align: left;
}
.content-txt{
  width: 100%;
  height: 45rpx;
  overflow: hidden;
  font-size: 24rpx;
  color: #b1b0b0;
  line-height: 45rpx;
  text-align: left;
}
.play-btn{
  width: 90rpx;
  height: 50rpx;
  color: #8901f5;
  font-size: 28rpx;
  line-height: 50rpx;
  text-align: center;
}