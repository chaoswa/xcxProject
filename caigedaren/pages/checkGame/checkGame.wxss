  font-size: 28rpx;
  background-color: #6b15a9;
}
.g_model_errbtn{
  margin-bottom: 30rpx;
  width: 408rpx;
  height: 82rpx;
  border-radius: 45rpx;
  line-height: 82rpx;
  font-size: 28rpx;
  color: #fff;
  background-color: #6b15a9;
}
.g_model_next{
  width: 100%;
  height: 50rpx;
  margin-top: 10rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  color: #6b15a9;
}